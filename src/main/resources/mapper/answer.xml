<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.easybusan.repository.interfaces.AnswerRepository">
    <select id="findAnswersByQuestionId" resultType="com.easybusan.repository.model.Answer">
        select *
        from answer
        where question_id = #{questionId}
    </select>

</mapper>